<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Rick and Morty</title>


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bangers&display=swap" rel="stylesheet">

    <style>
    
        
        #titulo {
            color: #128700;
            font-weight: 700;
        }

        #nav{
            background-color:black;
        }

        
        a#home, a#cadastro, a#resultado {
            color: white;
        }

            a#home:hover, a#cadastro:hover, a#resultado:hover {
                color: #ffd800;
            }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="nav" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="mais opções">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Rick and Morty", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", id = "titulo" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { @class = "navbar-brand", @id = "home" })</li>
                    <li>@Html.ActionLink("Cadastro", "Usuario", "Home", new { @class = "navbar-brand", @id = "cadastro" })</li>
                    <li>@Html.ActionLink("Resultado", "Resultado", "Home", new { @class = "navbar-brand", @id = "cadastro" })</li>
                </ul>
            </div>
        </div>
    </div>

        @RenderBody()
    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
